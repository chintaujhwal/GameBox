<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_2">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content">
        <item name="android:textColor">@color/grey_4</item>
    </style>

    <style name="rating_star">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="tint">@color/orange</item>
    </style>

    <style name="tab_layout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabTextColor">@color/grey_4</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/tab_layout_text_appearance</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="tab_layout_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>