<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="content">
        <item name="android:textColor">@color/grey_4</item>
    </style>

    <style name="searchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="queryBackground">@null</item>
        <item name="clockIcon">@drawable/close_24</item>
        <item name="searchIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">Search...</item>
    </style>

    <style name="rating_star">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="tint">@color/orange</item>
    </style>

    <style name="tab_layout">
        <item name="tabMode">scrollable</item>
    </style>

</resources>